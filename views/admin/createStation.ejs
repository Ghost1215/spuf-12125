<body>
    <h1>Public Transit App SPUF</h1>
    <h1>Create station</h1>

    <form action="/api/station/" method="POST" class="ui form">

        <div class="field">
            <label>Station Name</label>
            <input type="text" name="name" id="station_name" placeholder="Station name">
        </div>
        <div class="field">
            <label>Station Address</label>
            <input type="text" name="address" id="station_address" placeholder="Station address">
        </div>
        <div class="field">
            <label>Station Coord lon :</label>
            <input type="text" name="coord_lat" id="station_coord_lat" placeholder="Station coord_lat">
        </div>
        <div class="field">
            <label>Station Coord Lon :</label>
            <input type="text" name="coord_lon" id="station_coord_lon" placeholder="Station coord_lon">
        </div>

        <input type="submit" id="submit-btn" value="Submit" class="ui button primary">
    </form>
</body>
