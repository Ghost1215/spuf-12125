<!DOCTYPE HTML>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Index</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.14/semantic.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.14/semantic.min.js"></script>
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <h1>Public Transit App SPUF</h1>
    <h1>Edit station</h1>

    <form action="/api/station/" method="PUT" class="ui form">
        <label for="station">Station : </label>
        <select class="ui search dropdown" id="stationSelect">
            <option value="">Station</option>
            <% stations.forEach(station => { %>
                <option value="<%=station.ID%>">
                    <%=station.name%>
                </option>
                <% }) %>
        </select>

        <input type="hidden" name="id" id="station_id">
        <div class="field">
            <label>Station Name</label>
            <input type="text" name="name" id="station_name" placeholder="Station name">
        </div>
        <div class="field">
            <label>Station Address</label>
            <input type="text" name="address" id="station_address" placeholder="Station address">
        </div>
        <div class="field">
            <label>Station Coord lon :</label>
            <input type="text" name="coordLat" id="station_coord_lat" placeholder="Station coord_lat">
        </div>
        <div class="field">
            <label>Station Coord Lon :</label>
            <input type="text" name="coordLon" id="station_coord_lon" placeholder="Station coord_lon">
        </div>

        <input type="submit" id="submit-btn" value="Submit" class="ui button primary">
    </form>
</body>
<script>
    $('#stationSelect').dropdown({
        onChange: function () {
            var id = $('#stationSelect').dropdown('get value');
            
            // $("#submit-btn").disabled(true)
            $.getJSON(`https://project314.herokuapp.com/api/station/${id}`, (result)=>{
                $("#station_id").val(result.ID)
                $("#station_name").val(result.name)
                $("#station_address").val(result.address)
                $("#station_coord_lat").val(result.coord.lat)
                $("#station_coord_lon").val(result.coord.lon)
                // $("#submit-btn").disabled(false)
            })
        }
    });
</script>

</html>